<%= stylesheet_link_tag '/css/forms' %>
<div class="navbar">
  <%= link_to "Log in", new_session_path(resource_name), class: "btn-navbar" %>
  <%= link_to "Sign up", new_registration_path(resource_name), class: "btn-navbar" %>
</div>
<div class="row">
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <%= render ("/templates/ads") %>

  <div class="main">
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <div class='forms'>
    <h2 class="forms-h2">Forgot your password?</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>

        <div class="forms-text">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="forms-text">
         <%= f.label :username %><br />
         <%= f.text_field :username, autofocus: true, autocomplete: "username" %>
       </div>


        <%= f.submit "Send me reset password instructions" %>
      <% end %>

    </div>
  </div>

  <div class="notif">
  </div>
</div>
