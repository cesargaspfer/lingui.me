<%= stylesheet_link_tag '/css/forms' %>
<%= render('/templates/header') %>
<%= render ("/templates/navbar") %>

<div class="row">
  <%= render ("/templates/ads") %>

    <div class="main">
      <div class='forms'>
      <h2 class="forms-h2">Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
         <div class="forms-text">
          <%= f.label :login %><br />
          <%= f.text_field :login, autofocus: true, autocomplete: "username" %>
        </div>

        <div class="forms-text">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="forms-text">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <%= f.submit "Log in" %>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>

  <%= render ("/templates/notifications") %>
</div>

<%= render ("/templates/footer") %>
