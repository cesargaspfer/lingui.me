<%= stylesheet_link_tag '/css/forms' %>
<div class="navbar">
  <%= link_to t('login'), new_session_path(resource_name), class: "btn-navbar" %>
  <%= link_to t('sign_up'), new_registration_path(resource_name), class: "btn-navbar" %>
</div>

<div class="row">
  <%= render ("/templates/ads") %>

  <div class="main">
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <div class='forms'>
    <h2 class="forms-h2"><%= t('sign_up') %></h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="forms-text">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="forms-text">
        <%= f.label t('username') %><br />
        <%= f.text_field :username, autofocus: true, autocomplete: "username" %>
      </div>

      <div class="forms-text">
        <%= f.label t('password') %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> <%= t('char_min') %>)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <div class="forms-text">
        <%= f.label t('password_confirmation') %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>

      <%= f.submit t('sign_up') %>
    <% end %>
    </div>
  </div>

  <div class="notif">
  </div>
</div>
