<p id="notice"><%= notice %></p>

<p>
  <strong>Upvotes:</strong>
<%= @post.upvotes %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user.login %>
</p>

<p>
  <strong>Difficulty:</strong>
  <%= @post.difficulty %>
</p>

<p>
  <strong>Learning language:</strong>
  <%= @post.learning_language %>
</p>

<p>
  <strong>Mother language:</strong>
  <%= @post.mother_language %>
</p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Text:</strong>
  <%= @post.text %>
</p>

<p>
  <strong>Answers:</strong>
      <%@comments.each do |comment|%>
      <p><%comment.text%></p>
      <p>upvotes <%comment.upvotes%></p>
      <p>answered <%comment.created_at.strftime("%m/%d/%Y")%></p>
      <p>edited <%comment.updated_at%></p>
      <%end%>
</p>

